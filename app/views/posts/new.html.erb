<h1>Create Post</h1>
<%= form_for @post do |f| %>
  <%= f.label 'Title: ' %>
  <%= f.text_field :title %></br><%= "Title #{@post.errors[:title].first}" if @post.errors[:title].any? %><br>

  <%= f.label 'Content' %>
  <%= f.text_area :content %><%= "Content #{@post.errors[:content].first}" if @post.errors[:content].any? %><br>

  Who wrote this? <%= f.collection_select :blogger_id, Blogger.all, :id, :name %><br>
  Where was this? <%= f.collection_select :destination_id, Destination.all, :id, :name %>
  <%= f.submit 'Submit' %>
<% end %>


